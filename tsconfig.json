{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "isolatedModules": true,
    "strict": true,
    "noImplicitThis": false
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],
  "jsx": "preserve"
}
